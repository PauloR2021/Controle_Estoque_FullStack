<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pauloricardo.frontend_estoque.Controller.ResetSenha"
      prefHeight="600.0" prefWidth="1200.0"
      spacing="15"
      alignment="TOP_CENTER"
      stylesheets="/com/pauloricardo/frontend_estoque/styles/reset-senha.css">

    <padding>

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="txtSenha"
                       promptText="Digite seu Password"
                       prefWidth="250"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <TextField fx:id="textFieldSenha"
                   promptText="Digite seu Password"
                   visible="false"
                   managed="false"
                   prefWidth="250"

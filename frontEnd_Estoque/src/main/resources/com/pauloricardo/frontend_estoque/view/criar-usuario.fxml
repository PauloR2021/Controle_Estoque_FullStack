<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pauloricardo.frontend_estoque.Controller.CriarUsuario"
      prefHeight="600.0" prefWidth="1200.0"
      spacing="15"
      alignment="TOP_CENTER"
      stylesheets="/com/pauloricardo/frontend_estoque/styles/cadastro-usuario.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>



    <Label text="Criar UsuÃ¡rio" styleClass="titulo"/>

    <Separator prefWidth="200"/>

    <HBox alignment="TOP_RIGHT" prefWidth="600">
        <Button fx:id="btnLogin" text="Login" styleClass="btnLogin" onAction="#login"/>
    </HBox>


    <GridPane hgap="10" vgap="10" alignment="CENTER">

        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNome"
                   promptText="Digite o Nome do UsuÃ¡rio"
                   GridPane.columnIndex="1" GridPane.rowIndex="0" />


        <TextField fx:id="txtUsuario"
                   promptText="Digite o Username"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>


        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="txtSenha"
                        promptText="Digite seu Password"
                        prefWidth="250"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <TextField fx:id="textFieldSenha"
                   promptText="Digite seu Password"
                   visible="false"
                   managed="false"
                   prefWidth="250"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Button fx:id="btnMostrarSenha" text="ðŸ‘" styleClass="btnMostarSenha"
                GridPane.columnIndex="2" GridPane.rowIndex="2"
                onAction="#mostrarSenha"/>

        <Label text="Email do UsuÃ¡rio:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtEmail"
                   promptText="Digite seu Email"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <!-- BOTÃƒO CADASTRAR CENTRALIZADO -->
    <Separator prefWidth="200" />
    <HBox alignment="CENTER" prefWidth="600">
        <Button fx:id="btnCriar" text="Cadastrar" styleClass="btnCriar" onAction="#cadastrar"/>
    </HBox>

</VBox>

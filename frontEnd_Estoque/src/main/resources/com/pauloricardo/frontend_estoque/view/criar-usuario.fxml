<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pauloricardo.frontend_estoque.Controller.Produto.CriarUsuario"
      prefHeight="600.0" prefWidth="1200.0"
      spacing="15"
      alignment="TOP_CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Criar Usuário"/>

    <Separator prefWidth="200"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNome"
                   promptText="Nome do Usuário"
                   GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Nome de Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtUsuario"
                   promptText="Nome do Usuário"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Senha:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <PasswordField fx:id="txtSenha"
                        promptText="Digite sua Senah"
                        prefWidth="250"
                        GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <Label text="Email do Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="txtEmail"
                   promptText="Digite seu Email"
                   GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    </GridPane>

    <!-- BOTÃO CADASTRAR CENTRALIZADO -->
    <Separator prefWidth="200" />
    <HBox alignment="CENTER" prefWidth="600">
        <Button fx:id="btnCriar" text="Cadastrar" styleClass="btnCriar"/>
    </HBox>

</VBox>
